<?xml version="1.0" ?>
<rvx>
	<dec_ip>
		<name>vta</name>
		<hdl_name>ERVP_VTA</hdl_name>
		<def_parameter user_editable="False">
			<name>BW_ADDR</name>
			<value>32</value>
		</def_parameter>
		<def_parameter user_editable="False">
			<name>BW_AXI_TID</name>
			<value>4</value>
		</def_parameter>

		<signal>
			<name>clk</name>
			<width>1</width>
			<port>input</port>
			<comm_type>clk_network</comm_type>
		</signal>

		<signal>
			<name>rstnn</name>
			<width>1</width>
			<port>input</port>
		</signal>

		<reset_property>
			<id>rstnn</id>
			<type>asynch</type>
			<type>negative</type>
			<group>4</group>
		</reset_property>

		<core>
			<sync>clk</sync>
			<init>rstnn</init>
    </core>

		<interface>
			<name>data</name>
			<library_name>axi4</library_name>
			<role>sender</role>
			<comm_type>memory:fast</comm_type>
			<parameter>
				<id>bw_addr</id>
				<value>BW_ADDR</value>
			</parameter>
			<parameter>
				<id>bw_data</id>
				<value>64</value>
			</parameter>
			<parameter>
				<id>bw_tid</id>
				<value>BW_AXI_TID</value>
			</parameter>
			<sync>clk</sync>
			<init>rstnn</init>
		</interface>

    <interface>
			<name>config</name>
			<library_name>axi4l</library_name>
			<role>receiver</role>
			<comm_type>memory:peri</comm_type>
			<memorymap>
				<size>0x10000</size>
			</memorymap>
			<parameter>
				<id>bw_addr</id>
				<value>BW_ADDR</value>
			</parameter>
			<parameter>
				<id>bw_data</id>
				<value>32</value>
			</parameter>
			<sync>clk</sync>
			<init>rstnn</init>
		</interface>
	</dec_ip>
</rvx>
