<?xml version="1.0" ?>
<rvx>
	<dec_ip>
		<name>dma</name>
		<hdl_name>ERVP_DMA</hdl_name>
		<def_parameter>
			<name>BW_ADDR</name>
			<value>32</value>
		</def_parameter>
		<def_parameter>
			<name>BW_APB_DATA</name>
			<value>32</value>
    </def_parameter>
    <def_parameter>
			<name>BW_AXI_DATA</name>
			<value>32</value>
		</def_parameter>
		<def_parameter>
			<name>BW_AXI_TID</name>
			<value>4</value>
		</def_parameter>

		<signal>
			<name>clk_axi</name>
			<width>1</width>
			<port>input</port>
			<comm_type>clk_network</comm_type>
		</signal>

		<signal>
			<name>rstnn_axi</name>
			<width>1</width>
			<port>input</port>
		</signal>

		<reset_property>
			<id>rstnn_axi</id>
			<type>asynch</type>
			<type>negative</type>
			<group>2</group>
		</reset_property>

		<core>
			<sync>clk_axi</sync>
			<init>rstnn_axi</init>
    </core>

    <signal>
			<name>clk_apb</name>
			<width>1</width>
			<port>input</port>
			<comm_type>gclk_system</comm_type>
		</signal>

		<signal>
			<name>rstnn_apb</name>
			<width>1</width>
			<port>input</port>
		</signal>

		<reset_property>
			<id>rstnn_apb</id>
			<type>asynch</type>
			<type>negative</type>
			<group>2</group>
    </reset_property>

    <signal>
			<name>tick_1us</name>
			<width>1</width>
			<port>input</port>
			<comm_type>tick_1us</comm_type>
		</signal>

		<interface>
			<name>master</name>
			<library_name>axi</library_name>
			<hdl_prefix></hdl_prefix>
			<role>sender</role>
			<comm_type>memory:all</comm_type>
			<parameter>
				<id>bw_addr</id>
				<value>BW_ADDR</value>
			</parameter>
			<parameter>
				<id>bw_data</id>
				<value>BW_AXI_DATA</value>
			</parameter>
			<parameter>
				<id>bw_tid</id>
				<value>BW_AXI_TID</value>
			</parameter>
			<sync>clk_axi</sync>
			<init>rstnn_axi</init>
		</interface>

    <interface>
			<name>control</name>
			<library_name>apb</library_name>
			<role>receiver</role>
			<comm_type>memory:all</comm_type>
			<memorymap>
				<size>0x1000</size>
			</memorymap>
			<parameter>
				<id>bw_addr</id>
				<value>BW_ADDR</value>
			</parameter>
			<parameter>
				<id>bw_data</id>
				<value>BW_APB_DATA</value>
			</parameter>
			<sync>clk_apb</sync>
			<init>rstnn_apb</init>
		</interface>
	</dec_ip>
</rvx>
