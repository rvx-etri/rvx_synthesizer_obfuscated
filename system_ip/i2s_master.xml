<?xml version="1.0" ?>
<rvx>
	<dec_ip>
		<name>i2s_master</name>
		<hdl_name>ERVP_I2S_MASTER</hdl_name>
		<def_parameter>
			<name>BW_ADDR</name>
			<value>32</value>
		</def_parameter>
		<def_parameter>
			<name>BW_DATA</name>
			<value>32</value>
		</def_parameter>

		<signal>
			<name>clk</name>
			<width>1</width>
			<port>input</port>
			<comm_type>gclk_i2s</comm_type>
		</signal>

		<signal>
			<name>rstnn</name>
			<width>1</width>
			<port>input</port>
		</signal>

		<reset_property>
			<id>rstnn</id>
			<type>asynch</type>
			<type>negative</type>
			<group>2</group>
		</reset_property>

		<core>
			<sync>clk</sync>
			<init>rstnn</init>
		</core>

		<signal>
			<name>i2s_tx_mclk</name>
			<width>1</width>
			<port>output</port>
			<comm_type>external</comm_type>
		</signal>
		<signal>
			<name>i2s_tx_lrck</name>
			<width>1</width>
			<port>output</port>
			<comm_type>external</comm_type>
		</signal>
		<signal>
			<name>i2s_tx_sclk</name>
			<width>1</width>
			<port>output</port>
			<comm_type>external</comm_type>
		</signal>
		<signal>
			<name>i2s_tx_dout</name>
			<width>1</width>
			<port>output</port>
			<comm_type>external</comm_type>
		</signal>

		<signal>
			<name>i2s_rx_mclk</name>
			<width>1</width>
			<port>output</port>
			<comm_type>external</comm_type>
		</signal>
		<signal>
			<name>i2s_rx_lrck</name>
			<width>1</width>
			<port>output</port>
			<comm_type>external</comm_type>
		</signal>
		<signal>
			<name>i2s_rx_sclk</name>
			<width>1</width>
			<port>output</port>
			<comm_type>external</comm_type>
		</signal>
		<signal>
			<name>i2s_rx_din</name>
			<width>1</width>
			<port>input</port>
			<comm_type>external</comm_type>
		</signal>

		<signal>
			<name>rx_interrupt</name>
			<width>1</width>
			<port>output</port>
			<comm_type>i2s_interrupts</comm_type>
		</signal>

		<interface>
			<name>slave</name>
			<library_name>apb</library_name>
			<hdl_prefix></hdl_prefix>
			<role>receiver</role>
			<comm_type>memory:all</comm_type>
			<memorymap>
				<size>0x100</size>
			</memorymap>
			<parameter>
				<id>bw_addr</id>
				<value>BW_ADDR</value>
			</parameter>
			<parameter>
				<id>bw_data</id>
				<value>BW_DATA</value>
			</parameter>
			<sync>clk</sync>
			<init>rstnn</init>
		</interface>

	</dec_ip>
</rvx>
