<?xml version="1.0" ?>
<rvx>
	<dec_ip>
		<name>external_peri_group</name>
		<hdl_name>ERVP_EXTERNAL_PERI_GROUP</hdl_name>
		<def_parameter>
			<name>BW_ADDR</name>
			<value>1</value>
		</def_parameter>
		<def_parameter>
			<name>BW_DATA</name>
			<value>1</value>
		</def_parameter>
		<def_parameter>
			<name>NUM_UART</name>
			<value>1</value>
		</def_parameter>
		<def_parameter>
			<name>NUM_SPI</name>
			<value>1</value>
		</def_parameter>
		<def_parameter>
			<name>NUM_I2C</name>
			<value>1</value>
		</def_parameter>
		<def_parameter>
			<name>NUM_GPIO</name>
			<value>1</value>
		</def_parameter>
		<def_parameter>
			<name>NUM_AIOIF</name>
			<value>1</value>
		</def_parameter>

		<signal>
			<name>clk</name>
			<width>1</width>
			<port>input</port>
			<comm_type>gclk_system_external</comm_type>
		</signal>

		<signal>
			<name>rstnn</name>
			<width>1</width>
			<port>input</port>
		</signal>

		<signal>
			<name>tick_1us</name>
			<width>1</width>
			<port>input</port>
			<comm_type>tick_1us</comm_type>
		</signal>

		<signal>
			<name>tick_gpio</name>
			<width>1</width>
			<port>output</port>
			<comm_type>tick_gpio</comm_type>
		</signal>

		<signal>
			<name>uart_interrupts</name>
			<width>32</width>
			<port>output</port>
			<comm_type>uart_interrupts</comm_type>
		</signal>

		<signal>
			<name>spi_interrupt</name>
			<width>1</width>
			<port>output</port>
			<comm_type>spi_interrupts</comm_type>
		</signal>

		<signal>
			<name>i2c_interrupts</name>
			<width>32</width>
			<port>output</port>
			<comm_type>i2c_interrupts</comm_type>
		</signal>

		<signal>
			<name>gpio_interrupts</name>
			<width>32</width>
			<port>output</port>
			<comm_type>gpio_interrupts</comm_type>
		</signal>

		<signal>
			<name>wifi_interrupt</name>
			<width>1</width>
			<port>output</port>
			<comm_type>wifi_interrupts</comm_type>
		</signal>

		<signal>
			<name>spi_common_sclk</name>
			<width>1</width>
			<port>output</port>
			<user_available/>
		</signal>

		<signal>
			<name>spi_common_sdq0</name>
			<width>1</width>
			<port>output</port>
			<user_available/>
		</signal>

		<signal>
			<name>aioif_type</name>
			<width>`BW_AIOIF_TYPE</width>
			<port>output</port>
			<array>NUM_AIOIF</array>
			<comm_type>aioif_type_list</comm_type>
		</signal>

		<reset_property>
			<id>rstnn</id>
			<type>asynch</type>
			<type>negative</type>
			<group>1</group>
		</reset_property>

		<core>
			<sync>clk</sync>
			<init>rstnn</init>
		</core>

		<interface>
			<name>no_name</name>
			<hdl_prefix></hdl_prefix>
			<library_name>apb</library_name>
			<role>receiver</role>
			<comm_type>memory:all</comm_type>
			<memorymap>
				<size>2**16</size>
			</memorymap>
			<parameter>
				<id>bw_addr</id>
				<value>BW_ADDR</value>
			</parameter>
			<parameter>
				<id>bw_data</id>
				<value>BW_DATA</value>
			</parameter>
			<sync>clk</sync>
			<init>rstnn</init>
		</interface>

		<interface>
			<name>uart</name>
			<library_name>uart</library_name>
			<role>sender</role>
			<comm_type>uart</comm_type>
			<array>NUM_UART</array>
			<sync>None</sync>
			<init>None</init>
		</interface>

		<interface>
			<name>spi</name>
			<library_name>spi</library_name>
			<role>sender</role>
			<comm_type>spi</comm_type>
			<array>NUM_SPI</array>
			<sync>None</sync>
			<init>None</init>
		</interface>

		<interface>
			<name>i2c</name>
			<library_name>i2c</library_name>
			<role>sender</role>
			<comm_type>i2c</comm_type>
			<array>NUM_I2C</array>
			<sync>None</sync>
			<init>None</init>
		</interface>

		<interface>
			<name>olede</name>
			<library_name>olede</library_name>
			<role>sender</role>
			<hdl_prefix>oled_</hdl_prefix>
			<comm_type>external</comm_type>
			<sync>None</sync>
			<init>None</init>
		</interface>

		<interface>
			<name>wifie</name>
			<library_name>wifie</library_name>
			<role>sender</role>
			<hdl_prefix>wifi_</hdl_prefix>
			<comm_type>external</comm_type>
			<sync>None</sync>
			<init>None</init>
		</interface>
		
		<interface>
			<name>gpio</name>
			<library_name>gpio_mmio</library_name>
			<parameter>
				<id>bw_data</id>
				<value>BW_DATA</value>
			</parameter>
			<role>sender</role>
			<array>NUM_GPIO</array>
			<comm_type>gpio_mmio</comm_type>
			<sync>clk</sync>
			<init>rstnn</init>
		</interface>

	</dec_ip>
</rvx>
