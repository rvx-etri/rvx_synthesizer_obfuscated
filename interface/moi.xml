<?xml version="1.0" ?>
<rvx>
	<def_interface>
		<name>moi</name>
		<hdl_prefix>lm</hdl_prefix>
		<role>sender</role>
		<def_parameter>
			<name>bw_addr</name>
			<value>32</value>
		</def_parameter>
		<def_parameter>
			<name>bw_data</name>
			<value>32</value>
			<range>32,64,128</range>
    </def_parameter>
    <def_parameter>
			<name>has_burden</name>
			<value>0</value>
		</def_parameter>
    <def_parameter>
			<name>bw_burden</name>
			<value>1</value>
		</def_parameter>

		<signal_group>
			<name>request</name>
			<hdl_prefix>q</hdl_prefix>
			<signal>
				<name>dready</name>
				<width>2</width>
				<port>input</port>
			</signal>
			<signal>
				<name>valid</name>
				<width>1</width>
				<port>output</port>
			</signal>
			<signal>
				<name>addr</name>
				<width>bw_addr</width>
				<port>output</port>
      </signal>
      <signal>
				<name>write</name>
				<width>1</width>
				<port>output</port>
      </signal>
      <signal>
				<name>wdata</name>
				<width>bw_data</width>
				<port>output</port>
      </signal>
      <signal>
				<name>wpermit</name>
        <width>bw_data/8</width>
				<port>output</port>
      </signal>
      <signal>
				<name>burden</name>
        <width>bw_burden</width>
				<port>output</port>
			</signal>
		</signal_group>

		<signal_group>
			<name>reply</name>
			<hdl_prefix>y</hdl_prefix>
			<signal>
				<name>dready</name>
				<width>2</width>
				<port>output</port>
			</signal>
			<signal>
				<name>valid</name>
				<width>1</width>
				<port>input</port>
			</signal>
      <signal>
				<name>rdata</name>
				<width>bw_data</width>
				<port>input</port>
      </signal>
      <signal>
				<name>burden</name>
        <width>bw_burden</width>
				<port>input</port>
			</signal>
    </signal_group>

	</def_interface>
</rvx>
